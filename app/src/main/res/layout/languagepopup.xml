                android:textColor="@color/White"
                android:textSize="@dimen/Fonsize18dp" />
        </LinearLayout>

        <View
            android:id="@+id/lineheader"
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="#e9e9e9" />

        <LinearLayout
