<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">

    <ScrollView
        android:id="@+id/scrollView1"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerVertical="true"
        android:descendantFocusability="beforeDescendants"
        android:focusable="true"
        android:fadeScrollbars="false"

        android:focusableInTouchMode="true">

        <RelativeLayout
            android:id="@+id/rlKalmsharing"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="center_horizontal">

            <TextView
                android:id="@+id/tvKalmaName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:padding="@dimen/dp_5X"
                android:textColor="@color/yellow"
                android:textSize="@dimen/sp_30"
                android:visibility="invisible" />

            <ImageView
                android:id="@+id/kalmaimage"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/tvKalmaName"
                android:layout_centerHorizontal="true"
                android:background="@drawable/a" />

            <LinearLayout
                android:id="@+id/lrinnerGone"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_below="@+id/kalmaimage"
                android:orientation="vertical">

                <TextView
                    android:id="@+id/textpronce"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20X"
                    android:gravity="center"
                    android:text="@string/Pronounciation"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/sp_20"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/viewPronc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10X"
                    android:layout_marginRight="@dimen/dp_10X"
                    android:layout_marginTop="@dimen/dp_5X"
                    android:gravity="center"
                    android:text="Abchahahahahahahahahahahahahaha"
                    android:textColor="@color/White"
                    android:textSize="@dimen/sp_18"
                    android:visibility="visible" />

                <TextView
                    android:id="@+id/TextTansc"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="@dimen/dp_20X"
                    android:gravity="center"
                    android:text="@string/Translation"
                    android:textColor="@color/yellow"
                    android:textSize="@dimen/sp_20" />

                <TextView
                    android:id="@+id/viewtranslation"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10X"
                    android:layout_marginRight="@dimen/dp_10X"
                    android:layout_marginTop="@dimen/dp_5X"
                    android:gravity="center"
                    android:text="ababab"
                    android:textColor="@color/White"
                    android:textSize="@dimen/sp_18" />

                <TextView
                    android:id="@+id/textlink"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:layout_marginLeft="@dimen/dp_10X"
                    android:layout_marginRight="@dimen/dp_10X"
                    android:layout_marginTop="@dimen/dp_10X"
                    android:gravity="left"
                    android:text="@string/tinyurl"
                    android:textColor="@color/White"
                    android:textSize="@dimen/textSixe"
                    android:visibility="invisible" />
            </LinearLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>